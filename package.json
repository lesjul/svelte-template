{
	"name": "svelte-template",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:betterauth": "bunx @better-auth/cli generate --config src/lib/server/auth/index.ts --output src/lib/server/db/auth-schema.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:pull": "drizzle-kit pull",
		"db:up": "drizzle-kit up",
		"db:studio": "drizzle-kit studio",
		"db:seed": "bunx @better-auth-kit/cli seed --config='src/lib/server/auth/index.ts'",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --check . && eslint . --fix",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"paraglide:i18n": "bunx @inlang/paraglide-js compile --project ./project.inlang --outdir ./src/lib/common/paraglide",
		"prepare": "svelte-kit sync"
	},
	"dependencies": {
		"@inlang/paraglide-js": "^2.0.12",
		"argon2": "^0.43.0",
		"better-auth": "^1.2.7",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.43.1",
		"pg": "^8.15.6",
		"sveltekit-superforms": "^2.24.1",
		"uuid": "^11.1.0",
		"valibot": "^1.0.0"
	},
	"devDependencies": {
		"@better-auth-kit/cli": "^0.1.4",
		"@better-auth-kit/seed": "^1.0.11",
		"@eslint/compat": "^1.2.8",
		"@eslint/js": "^9.25.1",
		"@playwright/test": "^1.52.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.20.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.4",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.7",
		"@types/pg": "^8.11.14",
		"drizzle-kit": "^0.31.0",
		"eslint": "^9.25.1",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-svelte": "^3.5.1",
		"globals": "^16.0.0",
		"happy-dom": "^17.4.4",
		"lefthook": "^1.11.11",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.28.2",
		"svelte-check": "^4.1.6",
		"svelte-render-scan": "^1.1.0",
		"tailwindcss": "^4.1.4",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.31.0",
		"unplugin-turbo-console": "^2.1.3",
		"vite": "^6.3.3",
		"vite-plugin-remove-console": "^2.2.0",
		"vite-plugin-strip-comments": "^0.0.5",
		"vitest": "^3.1.2"
	}
}
